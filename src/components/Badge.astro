---
interface Props {
  href?: string;
  class?: string;
}

const { href, class: className } = Astro.props;

const baseClasses = [
  "inline-flex items-center no-underline transition",
  "font-semibold text-plum-500 uppercase",
  "hover:text-[#f4511e]",
];
---

{
  href ? (
    <a
      href={href}
      class:list={[...baseClasses, className]}
      style="font-family: var(--font-label); letter-spacing: 0.1em; font-size: 0.65rem;"
    >
      <>
        <span class="text-amber-500">#</span>
        <slot />
      </>
    </a>
  ) : (
    <span
      class:list={[...baseClasses, className]}
      style="font-family: var(--font-label); letter-spacing: 0.1em; font-size: 0.65rem;"
    >
      <>
        <span class="text-amber-500">#</span>
        <slot />
      </>
    </span>
  )
}
