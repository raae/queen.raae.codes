---
import BaseLayout from '../../layouts/BaseLayout.astro';
---

<BaseLayout title="Email reminders" description="Set up email reminders">
  <div class="min-h-screen px-4 py-8 max-w-4xl mx-auto">
    <header class="mb-12">
      <h1 class="text-4xl md:text-5xl font-bold mb-4">Email reminders</h1>
      <p class="text-lg text-brown-700 mb-8">
        Stay on top of important updates with email reminders.
      </p>

      <div class="border-4 border-dashed border-amber-500 p-6">
        <h2 class="text-2xl font-bold mb-4">Get reminded about:</h2>
        <div class="prose prose-brown max-w-none">
          <ul>
            <li>Weekly Ship's Log updates</li>
            <li>New blog posts and tutorials</li>
            <li>Upcoming talks and events</li>
            <li>Special announcements</li>
          </ul>
        </div>

        <div class="mt-6">
          <a href="/subs/" class="inline-block bg-amber-500 text-brown-900 px-6 py-3 rounded font-bold hover:bg-amber-600 transition">
            Subscribe to reminders
          </a>
        </div>
      </div>

      <div class="mt-8">
        <a href="/" class="inline-block text-brown-700 hover:text-teal-900">
          ‚Üê Back to home
        </a>
      </div>
    </header>
  </div>
</BaseLayout>
