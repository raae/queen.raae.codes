---
import BaseLayout from '../../layouts/BaseLayout.astro';
import PageSection from '../../components/PageSection.astro';
import PageSectionHeader from '../../components/PageSectionHeader.astro';
import PageSectionBreadcrumbs from '../../components/PageSectionBreadcrumbs.astro';
import Newsletter from '../../components/Newsletter.astro';

const BADGE = "Emails";
const TITLE = "Reminders";
const LEAD = "Live stream reminders";
---

<BaseLayout title={`${BADGE} - ${TITLE}`} description={LEAD}>
  <main>
    <PageSection component="header">
      <PageSectionBreadcrumbs
        class="mt-4"
        items={[
          { label: BADGE, to: '/subs/' },
          { label: TITLE }
        ]}
      />
      <PageSectionHeader
        title={LEAD}
        hLevel={1}
      />
      <div class="prose prose-brown prose-lg max-w-none my-4 text-brown-900">
        <p>
          Receive a reminder via email 30 minutes before we go live on the{" "}
          <a href="https://www.youtube.com/channel/UCDlrzlRdM1vGr8nO708KFmQ" target="_blank" rel="noopener" class="text-teal-900 underline underline-offset-2 hover:decoration-amber-600 transition">
            Queen Raae YouTube channel
          </a>.
        </p>
        <p class="text-sm">
          (The YouTube notifications system cannot be trusted)
        </p>
      </div>
    </PageSection>

    <PageSection>
      <Newsletter
        formKey="reminders"
        tagline="Get Live Stream Reminders"
        message="Sign up to receive email reminders before we go live."
        cta="Yes, please"
      />
    </PageSection>
  </main>
</BaseLayout>
