---
import BaseLayout from '../../layouts/BaseLayout.astro';

const BADGE = "Emails";
const TITLE = "Reminders";
const DESCRIPTION = "Live stream reminders";
---

<BaseLayout title={`${BADGE} - ${TITLE}`} description={DESCRIPTION}>
  <div class="min-h-screen px-4 py-8 max-w-4xl mx-auto">
    <header class="mb-12">
      <nav class="mb-6 text-sm">
        <a href="/subs/" class="text-brown-700 hover:text-teal-900">‚Üê {BADGE}</a>
        <span class="mx-2 text-brown-700">‚Ä¢</span>
        <span class="text-brown-700">{TITLE}</span>
      </nav>
      <h1 class="text-4xl md:text-5xl font-bold mb-4">{DESCRIPTION}</h1>

      <div class="prose prose-brown prose-lg max-w-none mb-8">
        <p>
          Receive a reminder via email 30 minutes before we go live on the{" "}
          <a href="https://www.youtube.com/channel/UCDlrzlRdM1vGr8nO708KFmQ" target="_blank" rel="noopener">
            Queen Raae YouTube channel
          </a>
          .<br />
          <small>
            (The YouTube notifications system cannot be trusted{" "}
            <span role="img" aria-label="Facepalm emoji">
              ü§¶‚Äç‚ôÄÔ∏è
            </span>{" "}
            )
          </small>
        </p>
      </div>

      <div class="border-4 border-dashed border-amber-500 p-6">
        <h2 class="text-2xl font-bold mb-4">Get Live Stream Reminders</h2>

        <form
          action="https://lillylabs.ck.page/forms/reminders.json"
          method="POST"
          class="space-y-4"
        >
          <input
            type="email"
            name="email_address"
            placeholder="your@email.com"
            required
            class="w-full px-4 py-3 border-2 border-brown-300 rounded focus:border-amber-500 focus:outline-none"
          />
          <button
            type="submit"
            class="w-full bg-amber-500 text-brown-900 px-6 py-3 rounded font-bold hover:bg-amber-600 transition"
          >
            Yes, please
          </button>
        </form>

        <p class="mt-4 text-sm text-brown-700">
          We respect your privacy. Unsubscribe at any time.
        </p>
      </div>
    </header>
  </div>
</BaseLayout>
