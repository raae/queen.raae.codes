      figure.frame-vignette {
        position: relative;
        overflow: hidden;
      }

      figure.frame-vignette img {
        display: block;
        width: 100%;
        height: auto;
      }

      figure.frame-vignette::before {
        content: "";
        position: absolute;
        inset: 0;
        bottom: auto;
        height: calc(100% - 2.5rem);
        box-shadow: inset 0 0 40px rgba(61, 18, 48, 0.18);
        pointer-events: none;
        z-index: 1;
