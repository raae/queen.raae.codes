---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const queenPosts = await getCollection('posts-queen');
const sortedPosts = queenPosts.sort((a, b) => {
  const dateA = a.id.match(/(\d{4})\/(\d{2})\/(\d{2})/);
  const dateB = b.id.match(/(\d{4})\/(\d{2})\/(\d{2})/);
  if (dateA && dateB) {
    return new Date(`${dateB[1]}-${dateB[2]}-${dateB[3]}`).getTime() - new Date(`${dateA[1]}-${dateA[2]}-${dateA[3]}`).getTime();
  }
  return 0;
}).map((post) => {
  const dateMatch = post.id.match(/(\d{4})\/(\d{2})\/(\d{2})/);
  const dateStr = dateMatch ? `${dateMatch[1]}-${dateMatch[2]}-${dateMatch[3]}` : '';
  const tags = post.data.tags ? post.data.tags.split(',').map(t => t.trim()) : [];

  return {
    ...post,
    dateStr,
    tags,
  };
});
---

<BaseLayout
  title="All the posts"
  description="Posts from sailing the high seas of the World Wide Web."
>
  <div class="min-h-screen px-4 py-8 max-w-4xl mx-auto">
    <header class="mb-12">
      <div class="text-sm text-brown-700 uppercase tracking-wide mb-2">Posts</div>
      <h1 class="text-4xl md:text-5xl font-bold mb-4">All the posts</h1>
      <p class="text-lg text-brown-700">Posts from sailing the high seas of the World Wide Web.</p>
    </header>

    <section class="mb-12">
      <div class="space-y-6">
        {sortedPosts.map((post) => (
          <article class="border-l-4 border-amber-500 pl-4 py-2">
            <a href={`/${post.slug}/`} class="block group">
              <div class="text-sm text-brown-700 mb-1">{post.dateStr}</div>
              <h2 class="text-2xl font-bold mb-2 group-hover:text-teal-900 transition">{post.data.title}</h2>
              {post.data.description && (
                <p class="text-brown-700">{post.data.description}</p>
              )}
              {post.tags.length > 0 && (
                <div class="mt-2 flex flex-wrap gap-2">
                  {post.tags.map((tag) => (
                    <span class="text-xs bg-brown-200 text-brown-900 px-2 py-1 rounded">
                      {tag}
                    </span>
                  ))}
                </div>
              )}
            </a>
          </article>
        ))}
      </div>
    </section>

    <section class="p-6 border-4 border-dashed border-amber-500">
      <h2 class="text-2xl font-bold mb-4">Newsletter</h2>
      <p class="mb-4">Subscribe to get emails about web development and pirate adventures!</p>
      <div class="text-center">
        <a href="/subs/" class="inline-block bg-amber-500 text-brown-900 px-6 py-3 rounded font-bold hover:bg-amber-600 transition">
          Sign up for the newsletter
        </a>
      </div>
    </section>
  </div>
</BaseLayout>
